<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:id="@+id/command_number"
        android:layout_height="wrap_content"
        android:text="Awesome"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        android:layout_gravity="center_vertical"/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="8dp"
    android:id="@+id/user1_click"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/user1_switch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="16dp"
        android:clickable="false"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>


    <TextView
        android:layout_width="0dp"
        android:id="@+id/user1_name_in_row"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:text="Awesome"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/user1_time_in_row"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Awesome"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:id="@+id/user2_click"
android:layout_height="48dp"
android:layout_marginTop="8dp"
android:orientation="horizontal">

<CheckBox
    android:id="@+id/user2_switch"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_marginRight="16dp"
    android:clickable="false"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"/>


<TextView
    android:layout_width="0dp"
    android:id="@+id/user2_name_in_row"
    android:layout_weight="5"
    android:layout_height="wrap_content"
    android:text="Awesome"
    android:layout_marginLeft="16dp"
    android:layout_gravity="center_vertical"/>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/user2_time_in_row"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Awesome"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>
</LinearLayout>