<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/dialer_toolbar"
        android:layout_width="match_parent"
        android:background="?android:colorPrimary"
        android:layout_height="?attr/actionBarSize"
        />

    <LinearLayout
        android:id="@+id/holder_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:transitionName="holder1"
        android:layout_below="@id/dialer_toolbar"
        android:background="?android:colorPrimary"
        android:paddingBottom="16dp"
        >

        <TextView
            android:id="@+id/title_command"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="?android:colorAccent"
            android:text="Команда 1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awesome"
            android:layout_marginLeft="72dp"
            android:textColor="?android:colorAccent"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awesome"
            android:layout_marginLeft="72dp"
            android:textColor="?android:colorAccent"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/title_command2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="?android:colorAccent"
            android:text="Команда 1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awesome"
            android:layout_marginLeft="72dp"
            android:textColor="?android:colorAccent"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awesome"
            android:layout_marginLeft="72dp"
            android:textColor="?android:colorAccent"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/holder_view"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_list_in_raw"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        </LinearLayout>

</RelativeLayout>